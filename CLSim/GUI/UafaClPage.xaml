                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Name="SwapTeamsButton" Content="Tausch" ToolTip="Tauscht das Heimrecht des Spiels" Click="SwapTeamsButton_Click" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>-->
            </Grid>
        </Expander>
    </Grid>
</Page>
